{
    "name": "allejo/resource-watcher",
    "description": "Simple PHP resource watcher library - no Laravel dependencies",
    "keywords": [
        "resource",
        "assets",
        "symfony"
    ],
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Jason Lewis",
            "email": "jason.lewis1991@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "symfony/filesystem": "^2.8|^3.0"
    },
    "require-dev": {
        "mockery/mockery": "~0.9",
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-0": {
            "JasonLewis\\ResourceWatcher": "src/"
        }
    },
    "conflict": {
        "jasonlewis/resource-watcher": "*"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
